<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Bem Vindo</title>
    <style>
        body {
            height: 100vh;
            display: grid;
            place-items: center;
        }

        input {
            margin-bottom: 20px;
        }

        form {
            padding: 50px;
            width: 500px;
            border: 1px solid #fff;
            border-radius: 10px;
        }
    </style>
</head>

<body class="bg-primary">
    <form>
        <label for="nomeJogador" class="text-light">Insira seu nome</label>
        <input type="text" name="nomeJogador" class="form-control" id="nomeJogador" required>
        <div class="text-center">
            <button class="btn btn-transparent border-light text-light">Entrar</button>
        </div>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        const form = document.querySelector('form');
        const inNome = document.querySelector('#nomeJogador');

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            socket.emit('novo-jogador', inNome.value);
        });

        socket.on('jogador-adicionado', (_) => {
            socket.emit('getMyIdSocket', inNome.value);
        });

        socket.on('getMyId', (idSocket) => {
            alert(idSocket);
            document.cookie = 'username=' + inNome.value;
            socket.emit('cookie-salvo', '')
        });

        socket.on('redirect', (destino) => {
            window.location.href = destino;
        });        

    </script>
</body>

</html>